#!/usr/bin/perl

use 5.012;
use strict;
use warnings;

use App::Jacana::Log;

BEGIN { App::Jacana::Log::handle_sigs }

use Gtk2 "-init";
use App::Jacana;

App::Jacana::Log::add_logfh \*STDERR;
App::Jacana::Log::set_verbose 1;
App::Jacana::Log::resume_log;

my $A = App::Jacana->new(args => \@ARGV);
$A->start;
