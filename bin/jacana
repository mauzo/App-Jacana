#!/usr/bin/perl

use 5.012;
use strict;
use warnings;

use App::Jacana::Log;

my $log;
BEGIN { 
    App::Jacana::Log::suspend_log;
    $log = App::Jacana::Log::open_logfile;
    App::Jacana::Log::handle_sigs;
}

use Gtk2 "-init";
use App::Jacana;
use Getopt::Std     qw/getopts/;

getopts "d:", \my %opts;

my $A = App::Jacana->new(logfile => $log);
$A->connect_unix_signals;
$A->start(\%opts, @ARGV);
